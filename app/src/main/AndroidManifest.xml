<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="t4.csc413.smartchef" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/smart_chef"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="connectors.google.MapsActivity"
            android:label="Find a Store" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.default" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResultsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SlideMain" />

        <activity android:name="database.DataBaseLayout"
            android:screenOrientation="portrait"/>

        <activity
            android:name="connectors.evernote.LoginActivity"
            android:label="@string/label_login"
            android:theme="@style/Theme.Demo"/>

        <activity android:name="connectors.evernote.EvernoteActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".LoadingActivity"
            android:label="@string/title_activity_loading"
            android:screenOrientation="portrait">
        </activity>

    </application>




</manifest>
