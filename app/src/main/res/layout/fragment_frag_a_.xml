<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eafff9"
    tools:context="t4.csc413.smartchef.FragA"
    android:fadeScrollbars="false"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eafff9">

    <!-- TODO: Update blank fragment layout -->

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment A"
        android:id="@+id/TextFA"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:textColor="#040201"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click below to add ingredients into Evernote"
        android:id="@+id/textView4"
        android:layout_below="@+id/TextFA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Add Ingredients to Evernote   "
        android:id="@+id/SiteButton"
        android:background="@layout/button"
        android:textColor="#040201"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click below to save recipe into database"
        android:id="@+id/SQLText"
        android:layout_below="@+id/SiteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Save Recipe   "
        android:id="@+id/SQLButton"
        android:background="@layout/button"
        android:textColor="#040201"
        android:layout_below="@+id/SQLText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoppingtext"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click below to save ingredients to shopping list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SQLButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoppinglist"
        android:background="@layout/button"
        android:textColor="#040201"
        android:layout_below="@+id/shoppingtext"
        android:layout_centerHorizontal="true"
        android:text="Add to Shopping List"/>

</RelativeLayout>
</ScrollView>



</RelativeLayout>

